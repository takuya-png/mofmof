<div>
  <p><strong>物件名：</strong><%= @estate.name %></p>
  <p><strong>賃料：</strong><%= @estate.rent %>円</p>
  <p><strong>住所：</strong><%= @estate.address %></p>
  <p><strong>築年数 </strong><%= @estate.age %>年</p>
  <p><strong>備考 </strong><%= @estate.remarks %></p>
</div>

<% i = 0 %>
<% @estate.stations.each do |t| %>
    <p><strong><%= "最寄り駅#{i + 1}" %></strong></p>
    <div>
      <p><strong>路線名</strong><%= t.route if t.route != "" %></p>
      <p><strong>駅名</strong><%= t.name if t.name != "" %></p>
      <p><strong>徒歩分数</strong><%= t.on_foot if t.on_foot != nil %></p>
    </div>
    <% i += 1 %>
<% end %>
<%= link_to "編集", edit_estate_path(@estate.id) %>
<%= link_to "戻る", estates_path %>